{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py", // Ejecuta manage.py
            "args": [
                "runserver" // Comando a ejecutar
            ],
            "django": true, // Habilita herramientas de depuración de Django
            "console": "integratedTerminal",
            // IMPORTANTE: Asegúrate de que el 'config.settings' apunte a tu carpeta principal
            "env": { 
                "DJANGO_SETTINGS_MODULE": "config.settings"
            }
        }
    ]
}